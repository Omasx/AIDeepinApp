<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyper Research Configuration"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>
    <EditText
        android:id="@+id/researchQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter research query..."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depth"
        android:layout_marginTop="12dp"/>
    <Spinner
        android:id="@+id/depthSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agent Count"
        android:layout_marginTop="12dp"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/agentCountSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="100"
        android:valueTo="1000000"
        android:stepSize="100"/>
</LinearLayout>
