<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- Top Settings Icon -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background">

        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_settings" />

        <!-- Stats Panel -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:background="@drawable/stats_background"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="CPU"
                    android:src="@drawable/ic_cpu"
                    android:tint="@color/primary" />

                <TextView
                    android:id="@+id/cpu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU: 37.7%"
                    android:textColor="@color/primary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="NET"
                    android:src="@drawable/ic_network"
                    android:tint="@color/primary" />

                <TextView
                    android:id="@+id/net_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NET: â†‘500mb â†“890mb"
                    android:textColor="@color/primary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="STORAGE"
                    android:src="@drawable/ic_storage"
                    android:tint="@color/primary" />

                <TextView
                    android:id="@+id/storage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STOR: 200GB Used"
                    android:textColor="@color/primary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="POWER"
                    android:src="@drawable/ic_power"
                    android:tint="@color/primary" />

                <TextView
                    android:id="@+id/power_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PWR: 45W (3h rem)"
                    android:textColor="@color/primary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- Central 3D Visualization -->
    <FrameLayout
        android:id="@+id/visualization_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/gradient_background" />

    <!-- Task Scheduler Bar -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:scrollbars="none"
        android:padding="4dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_schedule_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="âž• Schedule Task"
                android:background="@drawable/rounded_button"
                android:textColor="@color/primary"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btn_view_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ðŸ“… View All"
                android:background="@drawable/rounded_button"
                android:textColor="@color/primary"
                android:padding="8dp"
                android:textSize="10sp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/nav_background"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/nav_button"
            android:text="@string/nav_code"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/nav_button"
            android:text="@string/nav_data"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_test"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/nav_button"
            android:text="@string/nav_test"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_deploy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/nav_button"
            android:text="@string/nav_deploy"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/nav_button"
            android:text="STORE"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- AI Agent Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/background"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/ai_agent_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/ai_agent_button"
            android:contentDescription="@string/ai_agent_label"
            android:scaleType="centerInside"
            android:src="@drawable/ic_ai_agent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="@string/ai_agent_label"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>
